{
  "manifest_version": 2,

  "name": "Hound",
  "description": "This extension allows for direct access to page content from google search",
  "version": "1.0",

  "browser_action": {
    "default_icon": "public/img/lailaps_clear_48_filled.png",
    "default_popup": "public/popup.html"
  },
  "icons": {
    "48":"public/img/lailaps_clear_48_2.png"
  },
  "permissions": [
  	"tabs",
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": ["public/js/SearchDirect.js", "public/js/eventPage.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://www.google.com; object-src 'self'",
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches":  ["http://www.google.com/*", "https://www.google.com/*" ],
      "css": ["public/stylesheets/custom.css"],
      "js": ["public/lib/jquery-3.1.0.min.js", "public/js/SearchDirect.js", "public/js/googlePage.js", "public/js/findAndReplaceDOMText.js"]
    }, 
    {
      "run_at": "document_start",
      "matches": ["http://*/*", "https://*/*" ],
      "js": ["public/lib/jquery-3.1.0.min.js", "public/lib/jquery.scrollTo.min.js", "public/js/SearchDirect.js", "public/js/contentPage.js", "public/js/findAndReplaceDOMText.js"],
      "css": ["public/stylesheets/content.css"]
    }
  ]
}
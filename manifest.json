{
  "manifest_version": 2,

  "name": "SearchDirect",
  "description": "This extension shows allows for direct access to page content from google search",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "public/popup.html"
  },
  "permissions": [
  	"tabs",
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": ["public/js/eventPage.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://www.google.com; object-src 'self'",
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches":  ["http://www.google.com/*", "https://www.google.com/*" ],
      "css": ["public/stylesheets/custom.css"],
      "js": ["public/lib/jquery-3.1.0.min.js", "public/js/googlePage.js"]
    }, 
    {
      "run_at": "document_start",
      "matches": ["http://*/*", "https://*/*" ],
      "js": ["public/lib/jquery-3.1.0.min.js", "public/js/contentPage.js"]
    }
  ]
}
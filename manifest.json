{
  "manifest_version": 2,

  "name": "SearchDirect",
  "description": "This extension shows allows for direct access to page content from google search",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "public/popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "bookmarks",
    "https://ajax.googleapis.com/",
    "https://*.google.com/*",
    "http://mapifyapp.herokuapp.com/*"
  ],
  "content_security_policy": "script-src 'self' https://www.google.com; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["https://mapifyapp.herokuapp.com/*", "https://www.google.com/*"],
      "css": ["public/stylesheets/custom.css"],
      "js": ["public/lib/jquery-3.1.0.min.js", "public/js/contentScript.js", "public/js/googlePage.js"]
    }
  ],
  "background": {
    "scripts": ["public/js/googlePage.js"]
  }
}